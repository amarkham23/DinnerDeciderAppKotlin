<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textStyle="bold" android:textAlignment="center" android:textSize="18sp" android:id="@+id/foodTxt"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/dinDecideIcon"/>
    <ImageView
            android:layout_width="156dp"
            android:layout_height="138dp" app:srcCompat="@drawable/dd_logo"
            android:id="@+id/dinDecideIcon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="92dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <Button
            android:text="Button"
            android:layout_width="397dp"
            android:layout_height="58dp"
            android:id="@+id/decideBtn"
            style="@android:style/Widget.Material.Light.Button"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/addBtn"
            app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addFoodTxt"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="132dp"
            app:layout_constraintTop_toBottomOf="@+id/foodTxt" android:text="Enter a new food..."
            android:textAlignment="center"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addBtn" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/addFoodTxt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    />

</android.support.constraint.ConstraintLayout>